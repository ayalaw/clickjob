# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=5000

# Database Configuration - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/recruitment_db
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=recruitment_db

# Session Security
# Generate a long random string (64+ characters)
SESSION_SECRET=your_very_long_random_secret_key_at_least_64_characters_long

# Authentication Configuration
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id_here
REPLIT_DOMAINS=yourdomain.com

# Email Configuration - cPanel
CPANEL_EMAIL_USER=your-email@yourdomain.com
CPANEL_EMAIL_PASSWORD=your-cpanel-password
CPANEL_EMAIL_HOST=mail.yourdomain.com
CPANEL_IMAP_PORT=993
CPANEL_SMTP_PORT=465

# Email Configuration - Gmail (Alternative)
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASSWORD=your-gmail-app-password

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760