# Example Environment Variables for Production Deployment
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production
PORT=3000

# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Session Security
# Generate a long random string (64+ characters)
SESSION_SECRET=your_very_long_random_secret_key_at_least_64_characters_long

# Authentication (for Replit OAuth - optional if using different auth)
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id_here
REPLIT_DOMAINS=yourdomain.com

# PostgreSQL Connection Details (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGDATABASE=recruitment_db
PGUSER=recruitment_user
PGPASSWORD=your_database_password