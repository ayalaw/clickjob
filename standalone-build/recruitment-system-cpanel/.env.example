# הגדרות מערכת גיוס עצמאית
# Environment Configuration for Standalone Deployment

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/recruitment_db

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this

# Admin User Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=admin123

# Email Configuration (cPanel Only - No External Dependencies)
# SMTP Settings for sending emails
CPANEL_SMTP_HOST=mail.yourcompany.com
CPANEL_SMTP_PORT=587
CPANEL_SMTP_SECURE=false
CPANEL_EMAIL_USER=system@yourcompany.com
CPANEL_EMAIL_PASS=your-cpanel-email-password

# IMAP Settings for receiving emails (automatic candidate import)
INCOMING_EMAIL_HOST=mail.yourcompany.com
INCOMING_EMAIL_PORT=993
INCOMING_EMAIL_USER=hr@yourcompany.com
INCOMING_EMAIL_PASS=your-cpanel-email-password
INCOMING_EMAIL_SECURE=true

# Note: All email functionality works exclusively through your cPanel
# No external email services (Gmail, SendGrid, etc.) are used

# Application Settings
NODE_ENV=production
PORT=3000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Settings
BCRYPT_ROUNDS=12

# Application Info
APP_NAME=מערכת ניהול גיוס
APP_VERSION=1.0.0